@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h1>MDIGI-I Hub Dashboard</h1>

    <h2>User Claims</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Claim Type</th>
                <th>Claim Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in ViewBag.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>
                        @if (claim.Type == "realm_access" || claim.Type == "resource_access")
                        {
                            <pre>@claim.Value</pre>
                        }
                        else
                        {
                            @claim.Value
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Available Services</h2>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Certificate Service</h5>
                    <p class="card-text">Manage and verify digital certificates</p>
                    <a href="/Service/LaunchCertificateService" class="btn btn-primary">Launch Service</a>
                </div>
            </div>
        </div>
    </div>

    <h2 class="mt-5">Hub Navigation</h2>
    <div class="row mt-3">
        <div class="col">
            <a href="/Home/AdminOnly" class="btn btn-warning">Admin Only Page</a>
            <a href="/Home/EditorOnly" class="btn btn-warning">Editor Only Page</a>
            <a href="/Account/Logout" class="btn btn-secondary">Logout</a>
        </div>
    </div>
</div>